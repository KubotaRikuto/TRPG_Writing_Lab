<h1><%= @writing.title%>の内容</h1>
<div>
  <%= image_tag @writing.get_thumbnail_image(100,100) %>
</div>
<!-- work情報-->
<div>
  <div>
    <div>
      タイトル：
    </div>
    <%= @writing.title %>
  </div>
  <div>
    <div>TRPGルール：</div>

  </div>
  <div>
    <div>シナリオ・ルール</div>
    <%= @writing.writing_type %>
  </div>
  <div>
    <div>想定人数：</div>
    <%= @writing.min_players %> ~ <%= @writing.max_players%> 人
  </div>
  <div>
    <div>想定時間：</div>
    <%= @writing.min_play_time %> ~ <%= @writing.max_play_time %>時間
  </div>
  <div>
    <div>難しさ</div>
    <%= @writing.difficulty %>
  </div>
  <!--タグ欄-->
  <div>タグ欄</div>
  <div>
    更新日：<%= @writing.updated_at.strftime('%Y年%m月%d日 %H:%M')%>
  </div>
</div>
<!---->
<!-- 概要 -->
<div>
  <div>概要：</div>
  <div>
    <%= @writing.summary %>
  </div>
</div>
<% if　member_signed_in? && current_member.id == @writing.user_id %>
  <%= link_to "作品の編集", edit_writing_path(@writing.id), class: "" %>
<% end %>