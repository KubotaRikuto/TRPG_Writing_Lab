<div class="row my-5 justify-content-center">
  <div class="col-xl-11 col-12">
    <div class="row my-3 mx-0 border-bottom border-dark border-2">
      <h1>メンバーリスト</h1>
    </div>
    <div class="row mx-0 mb-3">
      <div class="table-responsive px-1 shadow-sm">
        <table class="table table-sm table-bordered">
          <thead>
            <tr class="text-center text-nowrap">
              <th colspan="2" style="width: 40%">メンバー名</th>
              <th style="width: 40%" class="px-5">好きなTRPG</th>
              <th style="width: 7%">いいね！</th>
              <th style="width: 13%">最終ログイン日</th>
            </tr>
          </thead>
          <% @members.each do |member| %>
          <tbody>
            <tr>
              <td rowspan="2" style="width: 5%" class="align-middle">
                <div class="text-center">
                  <%= link_to member_path(member.id) do %>
                    <%= image_tag member.get_profile_image(60,60), class: "border rounded-circle shadow-sm" %>
                  <% end %>
                </div>
              </td>
              <td>
                <%= link_to member_path(member.id), class:"link-dark text-decoration-none" do %>
                  <%= member.name %>
                <% end %>
              </td>
              <td rowspan="2" class="align-middle">
                <div class="w-100 wh-100" style="min-width: 300px; height: 71px;">
                  <%= truncate("#{member.favorite_trpg}", length: 90) %>
                </div>
              </td>
              <td rowspan="2" class="align-middle">
                <div class="text-center">
                  <%= member.total_likes %>
                </div>
              </td>
              <td rowspan="2" class="align-middle">
                <div class="text-center">
                  <%= member.last_sign_in_date %>
                </div>
              </td>
            </tr>
            <tr>
              <td class="text-nowrap">
                <%= truncate("#{member.introduction}", length: 30) %>
              </td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-auto">
        <%= paginate @members %>
      </div>
    </div>
  </div>
</div>