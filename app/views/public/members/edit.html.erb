<h1>プロフィールを編集</h1>

<%= form_with model: @member, url: member_path(@member.id), method: :patch do |f| %>
  <div>
    <%= image_tag @member.get_profile_image(100,100)%>
    <%= f.file_field :profile_image, placeholder: "ファイルを選択", accept: "image/*", class: "", id: "" %>
  </div>
  <div>
    <label for="inputName">ニックネーム</label>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
  </div>
  <div>
    <label for="email">メールアドレス</label>
    <%= f.email_field :email, id:"email", placeholder:"sample@sample.com" %>
  </div>
  <div>
    <label for="inputIntroduction">自己紹介</label>
    <%= f.text_area :introduction, id:"inputIntroduction", placeholder:"よろしくお願いします。" %>
  </div>
  <div>
    <%= link_to "退会する", members_withdrawl_path(@member.id), method: :patch, data: { confirm: "本当に退会しますか？", cancel: "やめる", commit: "退会する"}, class: "" %>
    <%= f.submit "変更を保存"%>
  </div>

<% end %>

