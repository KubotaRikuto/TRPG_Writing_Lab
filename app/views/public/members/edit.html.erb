<div class="row my-5 justify-content-center">
  <div class="col-xl-10 col-12">
    <div class="row my-3 mx-5 border-bottom border-dark border-2">
      <h1>プロフィールを編集</h1>
    </div>
    <%= form_with model: @member, url: member_path(@member.id), method: :patch do |f| %>
    <div class="row my-3 mx-5 p-4 double-border">
      <div class="mb-3">
        <%= image_tag @member.get_profile_image(100,100), class: "border rounded-circle me-4" %>
        <%= f.file_field :profile_image, placeholder: "ファイルを選択", accept: "image/*", class: "", id: "" %>
      </div>
      <div class="mb-3">
        <label for="inputName" class="form-label">ニックネーム</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"ニックネーム", class: "form-control" %>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">メールアドレス</label>
        <%= f.email_field :email, id:"email", placeholder:"sample@sample.com", class: "form-control" %>
      </div>
      <div class="mb-3">
        <label for="inputIntroduction" class="form-label">自己紹介</label>
        <%= f.text_area :introduction, id:"inputIntroduction", placeholder:"よろしくお願いします！", class: "form-control" %>
      </div>
      <div class="mb-3">
        <label for="inputFavoriteTrpg" class="form-label">好きなTRPG</label>
        <%= f.text_area :favorite_trpg, id:"inputFavoriteTrpg", placeholder:"好きなTRPG", class: "form-control" %>
      </div>
    </div>
    <div class="row my-3 mx-5 justify-content-between">
      <div class="col">
        <%= link_to "退会する", members_unsubscribe_path(@member), class: "text-danger" %>
      </div>
      <div class="col pe-0 text-end">
        <%= f.submit "変更を保存", class: "btn btn-outline-primary fw-bold" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
