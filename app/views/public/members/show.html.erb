<div class="row my-5 justify-content-center">
  <div class="col-xl-11 col-12">
    <div class="row my-3 mx-md-5 mx-0 border-bottom border-dark border-2">
      <h1>メンバー情報</h1>
    </div>
    <div class="row mb-5 mx-md-5 mx-0">
      <div class="col-sm-3 col-12 pt-3">
        <div class="row justify-content-center">
          <div class="col-sm-12 col-auto">
            <div class="text-center mb-1">
              <%= image_tag @member.get_profile_image(100,100), class:"border rounded-circle" %>
            </div>
          </div>
          <div class="col-sm-12 col-auto my-3 px-sm-3 px-0">
            <p class="text-center m-1">
              <span class="p-1 border rounded-circle"><i class="fa-solid fa-heart fa-lg heart-color"></i></span>
              <br class="d-xxl-none d-none d-sm-inline">いいねされた回数：<%= @member.total_likes %>
            </p>
          </div>
        </div>
      </div>
      <div class="col-sm-9 col-12">
        <div class="row double-border text-break">
          <p>
            <small><ニックネーム></small></br>
            <%= "#{@member.name}" %>
          </p>
          <p>
            <small><自己紹介></small></br>
            <%= safe_join(@member.introduction.split("\n"),tag(:br)) %>
          </p>
          <p class="mb-3">
            <small><好きなTRPG></small></br>
            <%= @member.favorite_trpg %>
          </p>
          <p class="mb-0 text-end">
            <i class="fa-regular fa-clock"></i>
            最終ログイン日：
            <%= @member.last_sign_in_date %>
          </p>
        </div>
        <div class="row my-2 justify-content-end">
          <div class="d-grid col-sm-auto col-12 pe-sm-0 px-0 text-end">
            <% if current_member == @member %>
              <%= link_to "プロフィール編集", edit_member_path(@member.id), class:"btn btn-outline-primary fw-bold" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <!-- 投稿作品一覧 -->
    <div class="row my-3 mx-md-5 mx-0 border-bottom border-dark border-2" id="member_writings">
      <h2>投稿作品</h2>
    </div>
    <div class="row justify-content-end mx-md-5 mx-0 mb-2">
      <div class="col-auto">
        <%= link_to "その他投稿した作品一覧 >>", member_writings_path(@member.id) %>
      </div>
    </div>
    <div class="row mx-md-5 mx-0 mb-5">
      <%= render 'list', writings: @writings %>
    </div>
    <!-- お気に入りの作品一覧 -->
    <div class="row my-3 mx-md-5 mx-0 border-bottom border-dark border-2">
      <h2>いいねした作品</h2>
    </div>
    <div class="row justify-content-end mx-md-5 mx-0 mb-2">
      <div class="col-auto">
        <%= link_to "その他いいねした作品一覧 >>", member_like_writings_path(@member.id) %>
      </div>
    </div>
    <div class="row mx-md-5 mx-0 mb-5">
      <%= render 'public/writings/list', writings: @like_writings %>
    </div>
  </div>
</div>