<!--admin/tags/indexページ-->
<div>
  <h1>タグ登録画面</h1>
  <!-- 新規登録 -->
  <%= form_with model: @tag, url: admin_tags_path, method: :post do |f| %>
    <div class="">
      <div class="">
        <label>タグ名</label>
      </div>
      <%= f.text_field :tag_name, autofocus: true, :placeholder => "タグ名", class: "" %>
      <%= f.hidden_field :admin_created, :value => true %>
      <%= f.submit  "新規登録", class: ""%>
    </div>
  <% end %>

  <!-- 一覧 -->
  <div>
    <table class="">
      <thead class="">
        <tr>
          <th  class="" style="width: 30%">タグ名<small>(タグ使用作品数)</small></th>
          <th style="width: 30%">作成区分</th>
          <th style="width: 50%"></th>
        </tr>
      </thead>
      <% @tags.each do |tags| %>
        <tbody>
          <tr>
            <td>
              <%= link_to tags.tag_name,admin_tag_search_path(tag_id: tags.id) %>
              <%= "(#{tags.writings.count})" %>
            </td>
            <td>
              <%= tags.admin_created ? '管理者' : '会員' %>
            </td>
            <td>
              <%= link_to "編集", edit_admin_tag_path(tags.id), class: "" %></br>
              <%= link_to "削除", admin_tag_path(tags.id), method: :delete, data: { confirm: "本当に削除しますか？", cancel: "やめる", commit: "退会する"}, class: "" %>
            </td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
</div>