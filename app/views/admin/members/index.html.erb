<div class="row my-5 justify-content-center">
  <div class="col-10">
    <div class="row my-3 border-bottom border-dark border-2">
      <h1 class="">メンバーリスト</h1>
    </div>
    <div class="row mb-3">
      <table class="table table-bordered">
        <thead>
          <tr class="text-center">
            <th colspan="2" style="width: 40%">メンバー名</th>
            <th style="width: 30%">好きなTRPG</th>
            <th style="width: 10%">公開ステータス</th>
            <th style="width: 10%">最終ログイン日</th>
          </tr>
        </thead>
        <% @members.each do |member| %>
        <tbody>
          <tr>
            <td rowspan="2" style="width: 5%" class="align-middle">
              <div class="text-center">
                <%= link_to admin_member_path(member.id) do %>
                  <%= image_tag member.get_profile_image(60,60), class: "border rounded-circle" %>
                <% end %>
              </div>
            </td>
            <td>
              <%= link_to admin_member_path(member.id), class: "link-dark text-decoration-none" do %>
                <%= member.name %>
              <% end %>
            </td>
            <td rowspan="2" class="align-middle">
              好きなTRPG
            </td>
            <td rowspan="2" class="align-middle">
              <div class="text-center">
                <% if member.is_deleted %>
                  <span class="text-danger fw-bold">利用停止</span>
                <% else %>
                  <span class="text-success fw-bold">利用中</span>
                <% end %>
              </div>
            </td>
            <td rowspan="2" class="align-middle">
              <div class="text-center">
                <%= member.last_sign_in_date %>
              </div>
            </td>
          </tr>
          <tr>
            <td>
              <%= truncate("#{member.introduction}", length: 30) %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
    <div>
      <%= paginate @members %>
    </div>
  </div>
</div>