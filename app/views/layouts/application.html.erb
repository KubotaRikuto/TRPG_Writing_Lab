<!DOCTYPE html>
<html>
  <head>
    <title>Portfolio</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- ヘッダー -->
    <header class="container-fluid">
      <nav>
        <div>
          <%= link_to root_path do %>
            <h1>TRPG Writing Lab</h1>
          <% end %>
          <% if member_signed_in? %>
            <p>ようこそ、<%= current_member.name %>さん！</p>
          <% end %>
        </div>
        <!-- 会員側 -->
        <% if member_signed_in? %>
          <%= link_to "メンバー", members_path %>
          <%= link_to "シナリオ・ルール", writings_path %>
          <%= link_to "タグ", tags_path %>
          <!-- テストプレイ -->
          <%= link_to "ログアウト", destroy_member_session_path, method: :delete %>
        <!-- 管理者 -->
        <% elsif admin_signed_in? %>
          <%= link_to "メンバー", admin_members_path %>
          <%= link_to "シナリオ・ルール", admin_writings_path %>
          <!-- テストプレイ -->
          <!--TRPGジャンル-->
          <%= link_to "タグ", admin_tags_path %>
          <%= link_to "コメント", admin_writing_comments_path %>
          <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>

        <!-- ログアウト時 -->
        <% else %>
          <%= link_to "アカウントを作成", new_member_registration_path %>
          <%= link_to "ログイン", new_member_session_path %>
          <%= link_to "ゲストログイン", member_guest_sign_in_path, method: :post %>
        <% end %>
      </nav>
      <div>
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>
    </header>
    <!-- メイン -->
    <main class="container">
      <%= yield %>
    </main>
    <!-- フッター -->
    <footer></footer>
  </body>
</html>
